{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "pnpm vite build",
		"beforeDevCommand": "pnpm vite dev",
		"devPath": "http://localhost:5173",
		"distDir": "../dist"
	},
	"package": {
		"productName": "Fordingbridge Astronomers Slideshow",
		"version": "../package.json"
	},
	"tauri": {
		"allowlist": {
			"process": {
				"exit": true
			},
			"window": {
				"setFullscreen": true
			}
		},
		"bundle": {
			"active": true,
			"targets": "msi",
			"category": "Utility",
			"identifier": "ec.brooke.fordingbridgeastro-slideshow",
			"shortDescription": "Fordingbridge Astonomers Slideshow",
			"icon": [
				"assets/32x32.png",
				"assets/128x128.png",
				"assets/128x128@2x.png",
				"assets/icon.icns",
				"assets/icon.ico"
			],
			"windows": {
				"allowDowngrades": true,
				"wix": {
					"bannerPath": "assets/banner.bmp",
					"dialogImagePath": "assets/dialogImage.bmp",
					"template": "template.wxs"
				}
			}
		}
	}
}
